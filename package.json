{
  "name": "chat-gpt-nestjs",
  "version": "1.8.0",
  "description": "Empower nestjs with native OpenAi integration",
  "author": "SanYann",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SanYann/chat-gpt-nestjs/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "npm run lint && nest build",
    "test": "jest --passWithNoTests",
    "prepublishOnly": "npm test && npm run build && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SanYann/chat-gpt-nestjs"
  },
  "keywords": [
    "chatgpt",
    "openai",
    "nestjs",
    "typescript"
  ],
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "axios": "^1.8.4",
    "openai": "^4.91.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "homepage": "https://github.com/SanYann/chat-gpt-nestjs#readme",
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "20.14.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "29.1.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "**/*.{ts,json}": []
  }
}
